// TABULATION(BOTTOM UP APPROACH)
// int main()
// {
//     int n, x;
//     cin >> n >> x;
//     int arr[n];
//     for (int i = 0; i < n; i++)
//         cin >> arr[i];
//     vector<vector<int>> dp(n, vector<int>(x + 1, 0));
//     for (int i = 0; i < n; i++)
