int main()
{
    int n, x;
    cin >> n >> x;
    int arr[n];
    for (int i = 0; i < n; i++)
        cin >> arr[i];
    vector<int> prev(x + 1, 0);
    vector<int> curr(x + 1, 0);
    prev[0] = 1;
    curr[0] = 1;
    for (int index = 0; index < n; index++)
    {
        for (int target = 1; target <= x; target++)
        {
            int notake = 0;
            if (index >= 1)
                notake = prev[target];
            int take = 0;
            if (target >= arr[index])
                take = curr[target - arr[index]];
            curr[target] = (take + notake) % mod;
        }
        prev = curr;
    }
    cout << prev[x];
    return 0;
}
