class Solution {
public:
    TreeNode *constructBST(TreeNode *root, int low, int high, vector<int> &nums)
    {
        if(low>high)
         return nullptr;
        int mid=low+(high-low)/2;
        root=new TreeNode(nums[mid]);
        root->left=constructBST(root->left, low, mid-1, nums);
        root->right=constructBST(root->right, mid+1, high, nums);
        return root;
    }
    TreeNode* sortedArrayToBST(vector<int>& nums) 
    {
       TreeNode *root=nullptr;
       root=constructBST(root,0, nums.size()-1, nums);
       return root; 
    }
};
